<?xml version="1.0" encoding="utf-8"?>
<Configuration>
  <Appenders>
    <File name="debug_log_file" fileName="./log/debug.log">
      <PatternLayout>
        <Pattern>
          %-5p %d{yyyy-MM-dd HH:mm:ss} [%F:%L] %C [%t]%ex - %m%n
        </Pattern>
      </PatternLayout>
    </File>

    <Console name="stdout" target="SYSTEM_OUT">
      <PatternLayout pattern="%-5p %d{yyyy-MM-dd} [%t] %C (%F:%L) - %m%n" />
    </Console>

  </Appenders>
  <Loggers>
    <Root level="trace">
      <AppenderRef ref="stdout" level="DEBUG"></AppenderRef>
      <AppenderRef ref="debug_log_file" level="ERROR"></AppenderRef>
    </Root>
  </Loggers>
</Configuration>